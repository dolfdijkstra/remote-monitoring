<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<factory>
    <query>*:service=ManagedConnectionPool,*</query>
    <attributes>
        <attribute name="AvailableConnectionCount" type="GAUGE" />
        <attribute name="MaxConnectionsInUseCount" type="GAUGE" />
        <attribute name="ConnectionCount" type="GAUGE" />
        <attribute name="InUseConnectionCount" type="GAUGE" />
    </attributes>
    <description-keys prefix="ManagedConnectionPool">name</description-keys>
    <db-template>JBossManagedConnectionPool.xml</db-template>
    <graph-templates>
        <template>JBossManagedConnectionPool.xml</template>
    </graph-templates>
</factory>
